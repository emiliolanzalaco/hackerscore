{
  "extends": "@tsconfig/next/tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    },
    "moduleResolution": "Node"
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "include": ["next-env.d.ts", "src", ".next/types/**/*.ts", "app"],
  "exclude": ["node_modules"]
}
